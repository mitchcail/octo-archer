<header class="header-10">
    <div class="container">
        <div class="row">
            <div class="navbar col-sm-12" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle"></button>
                    <a class="brand" href="#">Startup</a>
                </div>
                <div class="collapse navbar-collapse pull-right">
                    <ul class="nav pull-left">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Account</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                    <form class="navbar-form pull-left">
                        <a class="btn btn-success" href="#">Buy Now</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="header-background"></div>
</header>

<section class="contacts-2">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h3>Come Join</h3>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-6">
                <%= form_for(@user) do |f| %>
                <form>
                  <p>
                    <%= f.label :name %></br>
                    <%= f.text_field :name, size: 40, autofocus: true, class: "form-control" %>
                  </p>
                  <p>
                    <%= f.label :email %></br>
                    <%= f.email_field :email, size: 40, class: "form-control" %>
                  </p>
                  <p>
                    <%= f.label :password %></br>
                    <%= f.password_field :password, size: 40, class: "form-control" %>
                  </p>
                  <p>
                    <%= f.label :password_confirmation, "Confirm Password" %></br>
                    <%= f.password_field :password_confirmation, size: 40, class: "form-control" %>
                  </p>

                  <p>
                    <%= submit_tag "Sign Up", class: "btn btn-primary" %>
                  </p>
                </form>
                <% end %>
            </div>
            
        </div>
    </div>
</section>
